{
  "name": "genz-deezer",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter web dev",
    "web": "pnpm --filter web dev",
    "backend": "pnpm --filter backend dev",
    "build": "pnpm -r build",
    "build:core": "pnpm --filter @genz-deezer/core build",
    "build:infrastructure": "pnpm --filter @genz-deezer/infrastructure build",
    "lint": "eslint \"**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"**/*.{ts,tsx}\" --fix",
    "test": "pnpm -r test",
    "format": "prettier --write \"**/*.{ts,tsx,md,json,js,mjs}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json,js,mjs}\"",
    "format:debug": "prettier --debug-check \"**/*.{ts,tsx,md,json,js,mjs}\""
  },
  "devDependencies": {
    "@eslint/js": "9.17.0",
    "@types/node": "22.13.1",
    "eslint": "9.17.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-react": "7.37.3",
    "eslint-plugin-react-hooks": "5.0.0",
    "eslint-plugin-react-refresh": "0.4.16",
    "eslint-plugin-tailwindcss": "3.17.5",
    "globals": "15.14.0",
    "prettier": "3.2.0",
    "prettier-plugin-tailwindcss": "0.5.12",
    "typescript": "5.6.2",
    "typescript-eslint": "8.18.2"
  }
}
